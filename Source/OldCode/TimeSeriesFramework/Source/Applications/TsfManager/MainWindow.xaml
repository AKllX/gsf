<Window x:Class="TsfManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="750" Width="900"    
        xmlns:tsfconv="clr-namespace:TimeSeriesFramework.UI.Converters;assembly=TimeSeriesFramework.UI"
        xmlns:tsf="clr-namespace:TimeSeriesFramework.UI;assembly=TimeSeriesFramework.UI.WPF"         
        >
    <Window.Resources>        
        <tsfconv:RoleBasedVisibilityConverter x:Key="roleBasedVisibilityConverter" />
        <HierarchicalDataTemplate DataType="{x:Type tsf:MenuDataItem}" ItemsSource="{Binding Path=SubMenuItems}">            
            <ContentPresenter Content="{Binding Path=MenuText}" RecognizesAccessKey="True"/>            
        </HierarchicalDataTemplate>        
    </Window.Resources>

    <StackPanel Orientation="Vertical" Background="{StaticResource PageBackgroundBrush}">

        <!--<StackPanel.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/TimeSeriesFramework.UI.WPF;Component/Resources/CommonResource.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </StackPanel.Resources>
        
        <Button Template="{StaticResource LargeImageButtonTemplate}" Content="/TimeSeriesFramework.UI;component/images/GPALock.png" Tag="Grid Protection Alliance" 
                Background="#FF032236" Foreground="White" FontWeight="Black" Width="Auto" HorizontalAlignment="Right" VerticalAlignment="Center" Height="Auto"/>-->
        
               

        <Grid>
            <Grid.ColumnDefinitions>                
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                <ComboBox x:Name="ComboboxNode" DisplayMemberPath="Value" SelectionChanged="ComboboxNode_SelectionChanged" />
                <Ellipse x:Name="EllipseConnectionState" Fill="{StaticResource RedRadialGradientBrush}" Width="16" Height="16" Margin="2,0,0,0" />
            </StackPanel>

            <Menu x:Name="MenuMain" ItemsSource="{Binding}" Style="{StaticResource MenuStyle}" ItemContainerStyleSelector="{StaticResource MenuItemStyleSelector}"
                  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2" Grid.Row="1" Grid.Column="1" />

            <Border Background="White" CornerRadius="5" BorderThickness="1" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" HorizontalAlignment="Left" 
                    VerticalAlignment="Center" Margin="2" Padding="2">
                <Image Source="/TimeSeriesFramework.UI;component/images/GPALogo.png" Width="100" Height="47"/>
            </Border>               
            
        </Grid>

        <GroupBox x:Name="GroupBoxMain">
            <Border Padding="2" BorderThickness="1" Background="{StaticResource MenuBackgroundBrush}" CornerRadius="5">
                <Frame x:Name="FrameContent" NavigationUIVisibility="Hidden" HorizontalAlignment="Center"/>
            </Border>
        </GroupBox>

        </StackPanel>

</Window>
