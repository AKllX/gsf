<Window x:Class="UITest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"    
        xmlns:tsfconv="clr-namespace:TimeSeriesFramework.UI.Converters;assembly=TimeSeriesFramework.UI"
        xmlns:tsfutil="clr-namespace:TimeSeriesFramework.UI.Utilities;assembly=TimeSeriesFramework.UI.WPF" 
        Background="#FFDDDDDD"
        >
    <Window.Resources>        
        <tsfconv:RoleBasedVisibilityConverter x:Key="roleBasedVisibilityConverter" />
        <HierarchicalDataTemplate DataType="{x:Type tsfutil:MenuDataItem}" ItemsSource="{Binding Path=SubMenuItems}">            
            <ContentPresenter Content="{Binding Path=MenuText}" RecognizesAccessKey="True"/>            
        </HierarchicalDataTemplate>        
    </Window.Resources>

    <StackPanel Orientation="Vertical">
        <Menu x:Name="MenuMain" ItemsSource="{Binding}" ItemContainerStyleSelector="{StaticResource MenuItemStyleSelector}" MenuItem.Click="MenuMain_Click" /> 
        <TextBlock x:Name="TextBlockTitle" HorizontalAlignment="Center" FontWeight="Bold" Width="300" />
        <Frame x:Name="FrameContent" NavigationUIVisibility="Hidden" HorizontalAlignment="Center" />
    </StackPanel>
    
</Window>
