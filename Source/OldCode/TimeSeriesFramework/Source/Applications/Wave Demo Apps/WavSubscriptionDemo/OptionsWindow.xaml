<Window x:Class="WavSubscriptionDemo.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight" ResizeMode="NoResize" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center">
            <CheckBox Margin="0,0,0,10" Content="Enable Compression" IsChecked="{Binding EnableCompression}" />
            <CheckBox Margin="0,0,0,10" Content="Enable Encryption*" IsChecked="{Binding EnableEncryption}" />
            <CheckBox Margin="0,0,0,5" Content="IPv6 Enabled" IsChecked="{Binding IPv6Enabled}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,5" Grid.Row="1">
            <Label Content="*" Margin="0" />
            <Label Content="Key exchange is not secured." Margin="-9,0,0,0" FontStyle="Italic" FontSize="11" />
        </StackPanel>
                
        <Button Grid.Row="2" Width="70" Height="25" Content="Close" HorizontalAlignment="Right" Click="CloseButton_Click" />        
    </Grid>
</Window>
