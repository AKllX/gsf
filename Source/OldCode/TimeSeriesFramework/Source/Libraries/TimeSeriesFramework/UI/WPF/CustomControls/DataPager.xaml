<UserControl x:Class="TimeSeriesFramework.UI.CustomControls.DataPager"             
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:local="clr-namespace:TimeSeriesFramework.UI.CustomControls"
             >   
    
    <StackPanel Orientation="Horizontal">
        <Button x:Name="ButtonFirst" Content="&lt;&lt;" Width="50" Margin="2" Padding="2" />
        <Button x:Name="ButtonPrevious" Content="&lt;" Width="50" Margin="2" Padding="2" />
        <TextBlock Text="{Binding CurrentPageNumber,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" TextAlignment="Center" Width="50" Margin="2" Padding="2" />
        <TextBlock Text="of" TextAlignment="Center" Width="25" Margin="2" Padding="2" />
        <TextBlock Text="{Binding PageCount,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" TextAlignment="Center" Width="50" Margin="2" Padding="2" />        
        <Button x:Name="ButtonNext" Content="&gt;" Width="50" Margin="2" Padding="2" />
        <Button x:Name="ButtonLast" Content="&gt;&gt;" Width="50" Margin="2" Padding="2" />
    </StackPanel>
</UserControl>
