<Window x:Class="TimeSeriesFramework.UI.UserControls.PanAndZoomViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ShowInTaskbar="False"
        xmlns:panandzoom="clr-namespace:TimeSeriesFramework.UI;assembly=TimeSeriesFramework.UI"
        Title="Use mouse-wheel to zoom in and out, use mouse left button to drag" Height="600" Width="600">
    
    <panandzoom:PanAndZoom>
    
        <Canvas>
            
            <Image Name="DisplayImage"/>
            
        </Canvas>
        
    </panandzoom:PanAndZoom>
    
</Window>
